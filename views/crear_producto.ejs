<%- include ('./template/cabecera', {tituloa: 'Crear Producto' }); %>
<h1 align = 'center' class="text-primary">Crear Producto</h1>

<meta name="description" content="">
<meta name="viewport" content="width=device-width, initial-scale=1">

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" href="../css/style.css">

<div class="container">
    <form action="/productos" method="post">
        <input type="text"
        placeholder ="Agregar nombre del producto"
        class="form-control my-2"
        name="nombre_producto">

        <input type="text"
        placeholder ="Agregar NIT del proveedor"
        class="form-control my-2"
        name="nitproveedor">

        <input type="text"
        placeholder ="Agregar precio de compra"
        class="form-control my-2"
        name="precio_compra">

        <input type="text"
        placeholder ="Agregar IVA"
        class="form-control my-2"
        name="ivacompra">

        <input type="text"
        placeholder ="Agregar precio de venta"
        class="form-control my-2"
        name="precio_venta">
        <br>
        <br>

        <button
        class = "btn btn-success btn-block"
        type="submit">
            Agregar Producto
            </button>
            <br>
            <br>
            <h3 align = 'center' class="text-secondary">Importar productos</h3>

            <div class="mb-3">
                <label for="formFile" class="form-label">Buscar archivo</label>
                <input class="form-control" type="file" id="formFile">
              </div>

<%- include('./template/footer'); %>