<%- include ('./template/cabecera', {tituloa: 'Proveedores' }); %>
    <h1 align = 'center' class="text-secondary">Proveedores</h1>

    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/style.css">
    
    <div class="container">
        
        <table class="table table-success table-striped">
            <thead>
                <tr>
                    <th scope="col">#ID</th>
                    <th scope="col">NIT Proveedor</th>
                    <th scope="col">Ciudad del Proveedor</th>
                    <th scope="col">Direccion del Proveedor</th>
                    <th scope="col">Nombre del Proveedor</th>
                    <th scope="col">Telefono Proveedor</th>
                    <th scope="col">Acci√≥n</th>
                </tr>
            </thead>
            <hr> 
            <tbody>

                <% if (arrayProveedores.length> 0) { %>
                    <% arrayProveedores.forEach(proveedor=> { %>
                        
                        <tr>
                            <th scope="row"><%= proveedor.id %></th>
                            <td><%= proveedor.nitproveedor %></td>
                            <td><%= proveedor.ciudad_proveedor %></td>
                            <td><%= proveedor.direccion_proveedor %></td>
                            <td><%= proveedor.nombre_proveedor %></td>
                            <td><%= proveedor.telefono_proveedor %></td>
                            <td><a href="/proveedores/<%= proveedor.id %>"
                                class="btn btn-info btm-sm">Editar</a></td>
                        </tr>

                        <% }) %>

                            <% } %>


            </tbody>
        </table>
        <a class ="btn btn-outline-success btn-block my-4"
        href="/proveedores/crear_proveedor"> Crear Proveedor</a> 
    </div>
    
    <%- include('./template/footer'); %>